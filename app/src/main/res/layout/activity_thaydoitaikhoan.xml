<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp"
    tools:context=".Activities.Thaydoitaikhoan">

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/homeAsUpIndicator"
        android:textSize="50px"
        android:textColor="@color/white"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10px"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thay đổi thông tin"
        android:textSize="100px"
        android:textStyle="bold|italic"
        android:layout_gravity="center"
        android:layout_marginTop="100px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên:"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="30px"
        android:layout_marginTop="50px" />

    <EditText
        android:id="@+id/hoten"
        android:layout_width="1030px"
        android:layout_height="40dp"
        android:hint=""
        android:background="@android:drawable/editbox_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginLeft="20px"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính:"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="30px" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/btn_4"
        app:endIconContentDescription="Gender">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gioitinh"
            android:layout_width="1030px"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:hint=""
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:focusable="false"
            android:layout_marginLeft="20px" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày sinh:"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="30px" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="custom"
        app:endIconDrawable="@android:drawable/ic_menu_my_calendar"
        app:endIconContentDescription="Calendar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ngaysinh"
            android:layout_width="1030px"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:hint=""
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:focusable="false"
            android:layout_marginLeft="20px" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ:"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="30px" />

    <EditText
        android:id="@+id/diachi"
        android:layout_width="1030px"
        android:layout_height="40dp"
        android:hint=""
        android:background="@android:drawable/editbox_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginLeft="20px"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại:"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="30px" />

    <EditText
        android:id="@+id/sdt"
        android:layout_width="1030px"
        android:layout_height="40dp"
        android:hint=""
        android:background="@android:drawable/editbox_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginLeft="20px"
        android:textColor="#000000"
        android:textSize="20sp"
        android:maxLength="10"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="30px" />

    <EditText
        android:id="@+id/email"
        android:layout_width="1030px"
        android:layout_height="40dp"
        android:hint=""
        android:background="@android:drawable/editbox_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginLeft="20px"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đăng nhập:"
        android:textSize="50px"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="30px" />

    <EditText
        android:id="@+id/username"
        android:layout_width="1030px"
        android:layout_height="40dp"
        android:hint=""
        android:background="@android:drawable/editbox_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginLeft="20px"
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="text" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Nhập mật khẩu:"
        android:textSize="50px"
        android:textStyle="bold"
        android:layout_marginLeft="15dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="1030px"
        android:layout_height="40dp"
        android:background="@android:drawable/editbox_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginLeft="20px"
        app:passwordToggleEnabled="true"
        android:hint=""
        android:textColor="#000000"
        android:textSize="20sp"
        android:inputType="text" />

    <Button
        android:id="@+id/button"
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shape="oval"
        android:text="Xác nhận"
        android:textColor="#FFFFFF"
        android:textSize="50px"
        android:textStyle="bold" />

</LinearLayout>